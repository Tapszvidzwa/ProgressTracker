<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/task_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/bullet_point"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_decree" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_title_txtV"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:text="Example text"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>


    <TextView
        android:id="@+id/last_modified_by"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textStyle="italic"
        tools:text="Gangsta"
        android:layout_below="@id/task_details"
        android:textColor="@android:color/darker_gray"
        />

    <ImageView
        android:id="@+id/completion_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/date_last_modified"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        tools:text="Fri 12 July"
        android:layout_below="@id/task_details"
        android:textColor="@android:color/darker_gray"
        />
</RelativeLayout>