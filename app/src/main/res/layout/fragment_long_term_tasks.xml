<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/five_year_fragment_tasks_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/five_year_percentage_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/five_year_goals_lstV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp">
        </ListView>

        <ImageView
            android:id="@+id/five_year_resting_dude"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:src="@android:drawable/picture_frame"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/five_year_no_goals_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/five_year_resting_dude"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="You have no goals set"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>